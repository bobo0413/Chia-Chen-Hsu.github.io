name: Autograding Tests
'on':
- push
- repository_dispatch
permissions:
  checks: write
  actions: read
  contents: read
jobs:
  run-autograding-tests:
    runs-on: ubuntu-latest
    if: github.actor != 'github-classroom[bot]'
    steps:
    - name: Checkout code
      uses: actions/checkout@v4
    - name: Rendered site exists
      id: rendered-site-exists
      uses: classroom-resources/autograding-command-grader@v1
      with:
        test-name: Rendered site exists
        setup-command: ''
        command: test -f _site/index.html && test -f _site/about.html && test -f _site/project.html
        timeout: 10
        max-score: 100
    - name: Autograding Reporter
      uses: classroom-resources/autograding-grading-reporter@v1
      env:
        RENDERED-SITE-EXISTS_RESULTS: "${{steps.rendered-site-exists.outputs.result}}"
      with:
        runners: rendered-site-exists
